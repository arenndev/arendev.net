@model arendev.net.Models.Entity.Skill
@{
    ViewBag.Title = "AddSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Add Skill</h1>
                </div>
            </div>
        </div>

        <form method="post">

            @Html.Label("Id")
            @Html.TextBoxFor(x => x.Id, new { @class = "form-control" })
            <br />
            @Html.Label("Skill")
            @Html.TextBoxFor(x => x.Skill1, new { @class = "form-control" })
            <br />
            @Html.Label("Skill Level")
            @Html.TextBoxFor(x => x.SkillLevel, new { @class = "form-control" })
            <br />
            @Html.Label("SkillLevelNumbered")
            @Html.TextBoxFor(x => x.SkillLevelNumbered, new { @class = "form-control" })
            <br />
            @Html.Label("Information")
            @Html.TextBoxFor(x => x.Information, new { @class = "form-control" })
            <br />

            <button class="btn btn-info" name="save">Add Skill</button>
        </form>

    </div>
    <!-- /.content-header -->
    

</div>